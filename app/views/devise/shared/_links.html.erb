<% unless controller_name == 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: "block mb-4 text-blue-500 hover:underline" %>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "block mb-4 text-green-500 hover:underline" %>
<% end %>

<% if devise_mapping.recoverable? && !['passwords', 'registrations'].include?(controller_name) %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "block mb-4 text-red-500 hover:underline" %>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "block mb-4 text-yellow-500 hover:underline" %>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "block mb-4 text-purple-500 hover:underline" %>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "block mb-4 text-gray-700 bg-gray-200 hover:bg-gray-300 py-2 px-4 rounded-full focus:outline-none focus:shadow-outline" %>
  <% end %>
<% end %>
